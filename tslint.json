{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "member-access": [true, "no-public"],
    "object-literal-sort-keys": false,
    "variable-name": false,
    "interface-name": [true, "never-prefix"],
    "ordered-imports": false
  }
}
